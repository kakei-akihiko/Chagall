<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Chagall.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Chagall"
    xmlns:localv="using:Chagall.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ウインドウ一覧">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <NavigationView
        x:Name="NavView"
        PaneDisplayMode="Left"
        IsBackButtonVisible="Collapsed"
        IsPaneOpen="True"
        IsSettingsVisible="True"
        SelectionChanged="NavView_SelectionChanged"
        MenuItemsSource="{x:Bind ViewModel.NavigationItems}">
        <NavigationView.PaneHeader>
            <StackPanel Orientation="Horizontal">
                <Button Content="整列"/>
                <Button
                    Content="取得"
                    Click="RefreshButton_Click"/>
            </StackPanel>
        </NavigationView.PaneHeader>
        <NavigationView.MenuItemTemplate>
            <DataTemplate x:DataType="localv:MainNavigationItem">
                <NavigationViewItem
                    Icon="{x:Bind Icon}"
                    Content="{x:Bind Title}"
                    Tag="{x:Bind Tag}"/>
            </DataTemplate>
        </NavigationView.MenuItemTemplate>
        <!-- メイン領域 -->
        <StackPanel Margin="12,0,12,0">
            <TextBlock
                Text="タイトル:"
                Margin="0,12,0,0"
                />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    IsReadOnly="True"
                    Text="{x:Bind ViewModel.SelectedWindowTitle, Mode=OneWay}"
                    TextWrapping="Wrap"/>
                <Button
                    Grid.Column="1"
                    Content="コピー"
                    IsEnabled="{x:Bind ViewModel.SelecrtedWindowTitleCopyEnabled, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}"
                    VerticalAlignment="Top"
                    Click="TitleCopyButton_Click"/>
            </Grid>
            <TextBlock
                Text="メインモジュールのパス:"
                Margin="0,12,0,0"
                />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    IsReadOnly="True"
                    Text="{x:Bind ViewModel.SelectedWindowModulePath, Mode=OneWay}"
                    TextWrapping="Wrap"/>
                <Button
                    Grid.Column="1"
                    Content="コピー"
                    IsEnabled="{x:Bind ViewModel.SelecrtedWindowModulePathCopyEnabled, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}"
                    VerticalAlignment="Top"
                    Click="ModulePathCopyButton_Click"/>
            </Grid>
        </StackPanel>
    </NavigationView>
</Window>
